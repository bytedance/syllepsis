{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "allowJs": true,
    "outDir": "dist/lib",
    "baseUrl": ".",
    "paths": {
      "@syl-editor/adapter": ["./packages/adapter"],
      "@syl-editor/editor": ["./packages/editor"],
      "@syl-editor/plugin-basic": ["./packages/plugin-basic"],
      "@syl-editor/react-syl-editor-v2": ["./packages/react-access"]
    }
  },
  "exclude": ["node_modules"]
}
